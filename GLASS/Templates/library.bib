author = {Reddy, Naveen A. and Steidel, Charles C. and Pettini, Max and Bogosavljevic, Milan and Shapley, Alice},
eprint = {1606.03452},
file = {:Users/ben/Documents/mendeleydesktop/Reddy et al. - 2016 - The Connection Between Reddening, Gas Covering Fraction, and the Escape of Ionizing Radiation at High Redshift.pdf:pdf},
title = {{The Connection Between Reddening, Gas Covering Fraction, and the Escape of Ionizing Radiation at High Redshift}},
