@article{Yang2016,
abstract = {Green Peas are nearby analogs of high-redshift Ly{\$}\backslashalpha{\$}-emitting galaxies. To probe their Ly{\$}\backslashalpha{\$} escape, we study the spatial profiles of Ly{\$}\backslashalpha{\$} and UV continuum emission of 24 Green Pea galaxies using the Cosmic Origins Spectrograph (COS) on Hubble Space Telescope (HST). We extract the spatial profiles of Ly{\$}\backslashalpha{\$} emission from their 2D COS spectra, and of UV continuum from both the 2D spectra and NUV images. The Ly{\$}\backslashalpha{\$} emission shows more extended spatial profiles than the UV continuum in most Green Peas. The deconvolved Full Width Half Maximum (FWHM) of the Ly{\$}\backslashalpha{\$} spatial profile is about 2 to 4 times that of the UV continuum in most cases. The Ly{\$}\backslashalpha{\$} light shows significant offsets from the UV continuum in four galaxies and central absorption in one galaxy. We also compare the spatial profiles of Ly{\$}\backslashalpha{\$} photons at blueshifted and redshifted velocities in eight Green Peas with sufficient data quality, and find the blue wing of the Ly{\$}\backslashalpha{\$} line has a larger spatial extent than the red wing in four Green Peas with comparatively weak blue Ly{\$}\backslashalpha{\$} line wings. These results together indicate that most Ly{\$}\backslashalpha{\$} photons escape out of Ly{\$}\backslashalpha{\$}-emitting galaxies through many resonant scatterings in the HI gas. Five Lyman continuum (LyC) leakers in this sample have similar Ly{\$}\backslashalpha{\$} to UV continuum size ratios ({\$}\backslashsim1.4-4.3{\$}) to the other Green Peas, indicating their LyC emission escape through ionized holes in the interstellar medium.},
