keywords = {evolution,general,massive,outflows,rotation,stars,supernovae,winds},
month = {jul},
pages = {4},
title = {{Progenitors of supernova Ibc: a single Wolf-Rayet star as the possible progenitor of the SN Ib iPTF13bvn}},
